<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color of the bubble -->
    <solid android:color="#009688" />

    <!-- Add rounded corners to the bubble -->
    <corners
        android:radius="16dp" />

    <!-- Add padding to the bubble -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

    <!-- Add a stroke (border) to the bubble (optional) -->
    <stroke
        android:width="1dp"
        android:color="@color/red" />
</shape>