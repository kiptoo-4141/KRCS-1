<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Company Logo -->
    <ImageView
        android:id="@+id/companyLogo2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo2"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Certificate Title -->
    <TextView
        android:id="@+id/certificateTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate of Completion"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/companyLogo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Awarded To -->
    <TextView
        android:id="@+id/certificateName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awarded to: John Doe"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/certificateTitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Course Description -->
    <TextView
        android:id="@+id/certificateDescription2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For successfully completing Basic First Aid"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/certificateName2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Course Duration -->
    <TextView
        android:id="@+id/certificateDuration2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: 4 hours"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/certificateDescription2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Date of Completion -->
    <TextView
        android:id="@+id/certificateDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 12th February 2025"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/certificateDuration2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Trainer Name -->
    <TextView
        android:id="@+id/certificateTrainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer: Jane Smith"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/certificateDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Signature -->
    <ImageView
        android:id="@+id/certificateSignature"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/signature"
        android:contentDescription="Trainer Signature"
        app:layout_constraintTop_toBottomOf="@id/certificateTrainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Download Button -->
    <Button
        android:id="@+id/downloadCertificate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Certificate"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/certificateSignature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
