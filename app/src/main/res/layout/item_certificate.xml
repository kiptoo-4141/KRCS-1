<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Company Logo -->
    <ImageView
        android:id="@+id/companyLogo2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo2"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Course Title -->
    <TextView
        android:id="@+id/certificateTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate of Completion"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/companyLogo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Student Name -->
    <TextView
        android:id="@+id/certificateName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awarded to: John Doe"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/certificateTitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Course Description -->
    <TextView
        android:id="@+id/certificateDescription2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For successfully completing Basic First Aid"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/certificateName2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Duration -->
    <TextView
        android:id="@+id/certificateDuration2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: 4 hours"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/certificateDescription2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Download Button -->
    <Button
        android:id="@+id/downloadCertificate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Certificate"
        app:layout_constraintTop_toBottomOf="@id/certificateDuration2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
