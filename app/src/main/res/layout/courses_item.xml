<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"
    android:elevation="10dp"
    app:cardUseCompatPadding="true"
    android:background="@drawable/background2"
    android:backgroundTint="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

      <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:id="@+id/courseimg"
          android:src="@drawable/logo"
          android:layout_centerVertical="true"
          app:civ_border_width="2dp"
          app:civ_border_color="@color/red"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/courseId"
            android:text="101"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_toRightOf="@id/courseimg"/>
        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/courseimg"
            android:layout_below="@id/courseId"
            android:layout_marginLeft="12dp"
            android:padding="6dp"
            android:text="First AID"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/courseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:padding="6dp"
            android:layout_toRightOf="@+id/courseimg"
            android:layout_below="@+id/courseTitle"
            android:text="Course Description"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/courseDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:padding="6dp"
            android:layout_toRightOf="@+id/courseimg"
            android:layout_below="@+id/courseDescription"
            android:text="Course Duration"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/certificationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:padding="6dp"
            android:layout_toRightOf="@+id/courseimg"
            android:layout_below="@+id/courseDuration"
            android:text="Yes"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/feesAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:padding="6dp"
            android:layout_toRightOf="@+id/courseimg"
            android:layout_below="@+id/certificationStatus"
            android:text="Ksh: 2300"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/enrollButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feesAmount"
            android:layout_marginLeft="5dp"

            android:layout_toRightOf="@id/courseimg"
            android:backgroundTint="@color/red"
            android:text="ENROLL" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>