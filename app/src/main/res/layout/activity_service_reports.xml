<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ServiceReportsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Enrollments Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEnrollments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvEnrollmentsHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enrollments"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvEnrollments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Assigned Courses Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAssignedCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAssignedCoursesHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Assigned Courses"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAssignedCourses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Completed Courses Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCompletedCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvCompletedCoursesHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completed Courses"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCompletedCourses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Course Payments Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCoursePayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvCoursePaymentsHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Course Payments"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCoursePayments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>