<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DonationActivity"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/background1">

            <!-- Donation Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want to make a Donation?"
                android:textSize="40sp"
                android:layout_marginBottom="25dp"
                android:textAlignment="center"/>

            <!-- Full Name -->
            <EditText
                android:id="@+id/userDonationFullName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="25dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:hint="Full Name"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edittext_bg1"
                android:enabled="false"/>

            <EditText
                android:id="@+id/userDonationEmail"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:hint="Email"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@drawable/edittext_bg1"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Payment Mode:"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"/>

            <RadioGroup
                android:id="@+id/paymentMethodGroup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/creditCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Card"/>

                <RadioButton
                    android:id="@+id/mobileMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Money"/>

                <RadioButton
                    android:id="@+id/bankTransfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Transfer"/>



            </RadioGroup>

            <!-- Phone Number -->
            <EditText
                android:id="@+id/userDonationPhoneNumber"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="25dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:hint="Account Number"
                android:inputType="phone"
                android:background="@drawable/edittext_bg1"/>

            <!-- Donation Amount -->
            <EditText
                android:id="@+id/userDonationAmount"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="25dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:hint="Amount"
                android:inputType="number"
                android:background="@drawable/edittext_bg1"/>

            <!-- Payment Method Radio Buttons -->




            <!-- Donate Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/donateBtn"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:background="@color/red"
                android:textColor="@color/white"
                android:text="Donate"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
