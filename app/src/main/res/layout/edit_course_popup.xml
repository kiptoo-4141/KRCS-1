<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE COURSE"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@color/red"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Course Id"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <EditText
                android:id="@+id/updateCourseId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/input_curved_input"
                android:gravity="center"
                android:hint="102"
                android:textSize="35sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Course Title"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <EditText
                android:id="@+id/updateCourseTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/input_curved_input"
                android:gravity="center"
                android:hint="Basic First Aid"
                android:textSize="35sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Course Description"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <EditText
                android:id="@+id/updateCourseDescription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/input_curved_input"
                android:gravity="center"
                android:hint="Long Text"
                android:textSize="35sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Course Duration"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <EditText
                android:id="@+id/updateCourseDuration"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/input_curved_input"
                android:gravity="center"
                android:hint="3 hours"
                android:textSize="35sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Certification Status"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <EditText
                android:id="@+id/updateCertificatioStatus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/input_curved_input"
                android:gravity="center"
                android:hint="Yes"
                android:textSize="35sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Course Image Link"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <EditText
                android:id="@+id/updateImageLink"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/input_curved_input"
                android:gravity="center"
                android:hint="https://"
                android:textSize="35sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updateCourseButton"
                android:layout_width="400dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@color/red"
                android:text="UPDATE"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>