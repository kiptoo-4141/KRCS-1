<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:padding="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Course ID -->
        <TextView
            android:id="@+id/textCourseId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course ID: 111"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- User Email -->
        <TextView
            android:id="@+id/textUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Email: youth1@gmail.com"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Payment Method -->
        <TextView
            android:id="@+id/textPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method: M-Pesa"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Payment Details -->
        <TextView
            android:id="@+id/textPaymentDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Details: 0795310625"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Amount -->
        <TextView
            android:id="@+id/textAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: 800"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2024-12-15"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Time -->
        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 14:09:09"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/buttonApprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#0EE42A"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
