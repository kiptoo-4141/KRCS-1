<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvCourseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTrainerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trainer: John Doe"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvActivationTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activated: 2023-10-01 10:00 AM"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvExpirationTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expires: 2023-10-01 11:00 AM"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Active"
        android:textSize="14sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/studentsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Close" />
</LinearLayout>