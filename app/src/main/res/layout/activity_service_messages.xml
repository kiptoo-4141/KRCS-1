<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ServiceMessagesActivity">

    <!-- RecyclerView to display chat messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/replyLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp" />

    <!-- Reply layout at the bottom -->
    <LinearLayout
        android:id="@+id/replyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintTop_toBottomOf="@+id/messagesRecyclerView">

        <!-- EditText to enter reply -->
        <EditText
            android:id="@+id/replyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your reply"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:minLines="2" />

        <!-- Send Reply Button -->
        <Button
            android:id="@+id/sendReplyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Reply"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
