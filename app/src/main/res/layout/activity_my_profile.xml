<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyProfileActivity"
    android:padding="16dp"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profile_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo2"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:elevation="4dp"
                android:scaleType="centerCrop" />

            <!-- Profile Name -->
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_logo"
                android:text="John Doe"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="12dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:text="john.doe@example.com"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="4dp" />

            <!-- Skills Section -->
            <TextView
                android:id="@+id/skills_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:text="Skills"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/skills_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/skills_label"
                android:text="- Leadership\n- Communication\n- First Aid Training"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp" />

            <!-- Experience Section -->
            <TextView
                android:id="@+id/experience_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/skills_list"
                android:text="Experience"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/experience_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/experience_label"
                android:text="- Volunteered at XYZ Organization\n- Assisted in Disaster Relief Efforts"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp" />

            <!-- Certifications Section -->
            <TextView
                android:id="@+id/certifications_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/experience_list"
                android:text="Certifications"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/certifications_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/certifications_label"
                android:text="- CPR Certified\n- Community Service Award"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/certifications_list"
                android:text="Logout"
                android:textSize="18sp"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:layout_marginTop="32dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>