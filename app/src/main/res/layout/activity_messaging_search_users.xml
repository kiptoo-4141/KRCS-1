<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MessagingSearchUsersActivity"
    android:background="#ECF2F2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:id="@+id/search_user_toolbar">

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search User"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/backbtn"/>
        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_user_toolbar"
        android:gravity="center"
        android:id="@+id/search_user_layout">
        <EditText
            android:id="@+id/search_input"
            android:layout_margin="7dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background1"
            android:hint="Enter Username Or Email"
            android:textAlignment="center"
            android:elevation="8dp"
            android:layout_toLeftOf="@id/search_user_btn"/>
        <ImageButton
            android:id="@+id/search_user_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/baseline_person_search_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/red"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_user_layout"
        android:id="@+id/searchedUsersView"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_margin="6dp"/>

</RelativeLayout>